import java.util.Scanner;
import java.util.Random;

// custom random number generator
class MyRandom {
    Random rand = new Random();  // Java's built-in Random
    public int get() {
        return rand.nextInt(6) + 1; // generate numbers 1–6
    }
}

public class Main {

    // check snakes and ladders
    static int checkPosition(int pos) {
        switch (pos) {
            // 🪜 ladders
            case 5:  System.out.println("Ladder!,You climbed up to 17"); return 17;
            case 19: System.out.println("Ladder!,You climbed up to 45"); return 45;
            case 23: System.out.println("Ladder!,You climbed up to 33"); return 33;
            case 39: System.out.println("Ladder!,You climbed up to 48"); return 48;
            case 51: System.out.println("Ladder!,You climbed up to 55"); return 55;
            case 72: System.out.println("Ladder!,You climbed up to 73"); return 73;
            case 86: System.out.println("Ladder!,You climbed up to 97"); return 97;
            case 94: System.out.println("Ladder!,You climbed up to 95"); return 95;

            // 🐍 snakes
            case 13: System.out.println("Snake! Down to 7");  return 7;
            case 28: System.out.println("Snake! Down to 16"); return 16;
            case 37: System.out.println("Snake! Down to 3");  return 3;
            case 54: System.out.println("Snake! Down to 25"); return 25;
            case 66: System.out.println("Snake! Down to 36"); return 36;
            case 79: System.out.println("Snake! Down to 67"); return 67;
            case 83: System.out.println("Snake! Down to 71"); return 71;
            case 98: System.out.println("Snake! Down to 44"); return 44;
        }
        return pos;
    }

    // 🟦 print board method
    static void printBoard(int s1, int s2) {
        for (int row = 10; row > 0; row--) {
            for (int col = 1; col <= 10; col++) {
                int num;
                if (row % 2 == 0) {
                    num = (row - 1) * 10 + col;   // left → right
                } else {
                    num = row * 10 - col + 1;    // right → left
                }

                // Show players
                if (num == s1 && num == s2) {
                    System.out.printf("%-6s", "P1P2");
                } else if (num == s1) {
                    System.out.printf("%-6s", "P1");
                } else if (num == s2) {
                    System.out.printf("%-6s", "P2");
                } else {
                    System.out.printf("%-6d", num);
                }
            }
            System.out.println();
        }
        System.out.println("--------------------------------------------------");
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        MyRandom r = new MyRandom(); 
        int s1 = 0, s2 = 0;

        System.out.println("🎲 Welcome to Snake and Ladder 🎲");
        System.out.println("➡️ Rule: You must roll the exact number to reach 100");
        System.out.println("First to reach 100 wins!");
        System.out.println("-------------------------");

        // initial board
        printBoard(s1, s2);

        while (s1 < 100 && s2 < 100) {
            // Player 1 turn
            System.out.println("Player 1 turn: (press Enter to roll)");
            sc.nextLine();
            int n1 = r.get();
            System.out.println("Player 1 rolled: " + n1);

            if (s1 + n1 <= 100) {
                s1 += n1;
                s1 = checkPosition(s1);
            } else {
                System.out.println("Roll too high! Stay at " + s1);
            }
            System.out.println("Player 1 at: " + s1);
            printBoard(s1, s2);

            if (s1 == 100) break;

            // Player 2 turn
            System.out.println("Player 2 turn: (press Enter to roll)");
            sc.nextLine();
            int n2 = r.get();
            System.out.println("Player 2 rolled: " + n2);

            if (s2 + n2 <= 100) {
                s2 += n2;
                s2 = checkPosition(s2);
            } else {
                System.out.println("Roll too high! Stay at " + s2);
            }
            System.out.println("Player 2 at: " + s2);
            printBoard(s1, s2);

            System.out.println("-------------------------");
        }

        if (s1 == 100) {
            System.out.println("🎉 Player 1 wins!");
        } else {
            System.out.println("🎉 Player 2 wins!");
        }

        sc.close();
    }
}